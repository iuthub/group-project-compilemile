    <center>
        <TabPane prefHeight="360.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <tabs>
                <Tab text="Librarians">
                    <VBox>
                        <TableView>
                            <columns>
                                <TableColumn text="First Name">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="firstName" />
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn text="Last Name">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="lastName" />
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn text="Username">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="userName" />
                                    </cellValueFactory>
                                </TableColumn>
                            </columns>
                        </TableView>
                        <HBox prefHeight="20" prefWidth="200.0" spacing="5">
                            <TextField fx:id="txtLibFirstName" promptText="first name" />
                            <TextField fx:id="txtLibLastName" promptText="last name" />
                            <TextField fx:id="txtLibUsername" promptText="username" />

                            <Button text="Add" />
                            <Button text="Edit" />
                            <Button text="Delete" />
                        </HBox>
                    </VBox>
                </Tab>

                <Tab text="Students">
                    <VBox>
                        <TableView>
                            <columns>
                                <TableColumn text="First Name">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="firstName" />
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn text="Last Name">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="lastName" />
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn text="Username">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="userName" />
                                    </cellValueFactory>
                                </TableColumn>
                            </columns>
                        </TableView>
                        <HBox prefHeight="20" prefWidth="200.0" spacing="5">
                            <TextField fx:id="txtStudFirstName" promptText="first name" />
                            <TextField fx:id="txtStudLastName" promptText="last name" />
                            <TextField fx:id="txtStudUsername" promptText="username" />

                            <Button text="Add" />
                            <Button text="Edit" />
                            <Button text="Delete" />
                        </HBox>
                    </VBox>
                </Tab>
                <Tab text="Books">
                    <VBox>
                        <HBox spacing="10">
                            <TableView>
                                <columns>
                                    <TableColumn text="Title">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="" />
                                        </cellValueFactory>
                                    </TableColumn>
                                    <TableColumn text="Author">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="" />
                                        </cellValueFactory>
                                    </TableColumn>
                                    <TableColumn text="ISBN">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="bookISBN" />
                                        </cellValueFactory>
                                    </TableColumn>
                                    <TableColumn text="Taken by">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="bookInStudent" />
                                        </cellValueFactory>
                                    </TableColumn>
                                </columns>
                            </TableView>
                     <GridPane prefWidth="272.0">
                       <columnConstraints>
                         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                       </columnConstraints>
                       <rowConstraints>
                         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                       </rowConstraints>
                     </GridPane>
                        </HBox>
                        <HBox prefHeight="20" prefWidth="200.0" spacing="5">
                            <TextField fx:id="txtTitle" promptText="title" />
                            <TextField fx:id="txtAuthor" promptText="author" />
                            <TextField fx:id="txtISBN" promptText="isbn" />

                            <Button text="Add" />
                            <Button text="Edit" />
                            <Button text="Delete" />
                        </HBox>
                    </VBox>
