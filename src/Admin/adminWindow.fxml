<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Admin.Controller">
    <center>
        <TabPane prefHeight="360.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <tabs>
                <Tab text="Librarians">
                    <VBox spacing="5">
                        <HBox spacing="10">
                            <TableView fx:id="tblLibrarians">
                                <columns>
                                    <TableColumn text="First Name">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="firstName" />
                                        </cellValueFactory>
                                    </TableColumn>
                                    <TableColumn text="Last Name">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="lastName" />
                                        </cellValueFactory>
                                    </TableColumn>
                                    <TableColumn text="Username">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="userName" />
                                        </cellValueFactory>
                                    </TableColumn>
                                </columns>
                            </TableView>
                            <GridPane prefHeight="305.0" prefWidth="337.0" style="-fx-border-color: #888888;">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                </rowConstraints>
                            </GridPane>
                        </HBox>
                        <HBox prefHeight="20" prefWidth="200.0" spacing="5">
                            <PasswordField fx:id="txtLibPassword" promptText="password" />
                            <TextField fx:id="txtLibFirstName" promptText="first name" />
                            <TextField fx:id="txtLibLastName" promptText="last name" />
                            <TextField fx:id="txtLibUsername" promptText="username" />

                            <Button text="Add" onAction="#addLib"/>
                            <Button text="Edit" />
                            <Button text="Delete" onAction="#deleteLibrarian"/>
                        </HBox>
                    </VBox>
                </Tab>

                <Tab text="Students">
                    <VBox spacing="5">
                        <HBox spacing="10">
                            <TableView fx:id="tblStudents">
                                <columns>
                                    <TableColumn text="First Name">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="firstName" />
                                        </cellValueFactory>
                                    </TableColumn>
                                    <TableColumn text="Last Name">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="lastName" />
                                        </cellValueFactory>
                                    </TableColumn>
                                    <TableColumn text="Username">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="userName" />
                                        </cellValueFactory>
                                    </TableColumn>
                                </columns>
                            </TableView>
                            <GridPane prefHeight="305.0" prefWidth="337.0" style="-fx-border-color: #888888;">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                </rowConstraints>
                            </GridPane>
                        </HBox>

                        <HBox prefHeight="20" prefWidth="200.0" spacing="5">
                            <PasswordField fx:id="txtStudPassword" promptText="password" />
                            <TextField fx:id="txtStudFirstName" promptText="first name" />
                            <TextField fx:id="txtStudLastName" promptText="last name" />
                            <TextField fx:id="txtStudUsername" promptText="username" />

                            <Button text="Add" onAction="#addStud"/>
                            <Button text="Edit" />
                            <Button text="Delete" onAction="#deleteStudent"/>
                        </HBox>
                    </VBox>
                </Tab>
                <Tab text="Books">
                    <VBox spacing="5">
                        <HBox spacing="10">
                            <TableView>
                                <columns>
                                    <TableColumn text="Title">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="" />
                                        </cellValueFactory>
                                    </TableColumn>
                                    <TableColumn text="Author">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="" />
                                        </cellValueFactory>
                                    </TableColumn>
                                    <TableColumn text="ISBN">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="" />
                                        </cellValueFactory>
                                    </TableColumn>
                                    <TableColumn text="Taken by">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="" />
                                        </cellValueFactory>
                                    </TableColumn>
                                </columns>
                            </TableView>
                     <GridPane prefHeight="310.0" prefWidth="262.0" style="-fx-border-color: #888888;">
                       <columnConstraints>
                         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                       </columnConstraints>
                       <rowConstraints>
                         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                       </rowConstraints>
                     </GridPane>
                        </HBox>
                        <HBox prefHeight="20" prefWidth="200.0" spacing="5">
                            <TextField fx:id="txtTitle" promptText="title" />
                            <TextField fx:id="txtAuthor" promptText="author" />
                            <TextField fx:id="txtISBN" promptText="isbn" />

                            <Button text="Add" />
                            <Button text="Edit" />
                            <Button text="Delete" />
                        </HBox>
                    </VBox>
                </Tab>
            </tabs>
        </TabPane>
    </center>

    <bottom>
        <HBox alignment="BOTTOM_RIGHT">
            <Button onAction="#handleLogOut" style="-fx-background-color: #00ffff;" text="Log out" />
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>
