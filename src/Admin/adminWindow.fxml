<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Admin.Controller">
    <center>
        <TabPane prefHeight="360.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <tabs>
                <Tab text="Librarians">
                    <VBox spacing="5">
                        <HBox spacing="10">
                            <TableView fx:id="tblLibrarians">
                                <columns>
                                    <TableColumn text="First Name">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="firstName" />
                                        </cellValueFactory>
                                    </TableColumn>
                                    <TableColumn text="Last Name">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="lastName" />
                                        </cellValueFactory>
                                    </TableColumn>
                                    <TableColumn text="Username">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="userName" />
                                        </cellValueFactory>
                                    </TableColumn>
                                </columns>
                            </TableView>
                            <GridPane prefHeight="305.0" prefWidth="337.0" style="-fx-border-color: #888888;">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                </rowConstraints>
                            </GridPane>
                        </HBox>
                        <HBox prefHeight="20" prefWidth="200.0" spacing="5">
                            <PasswordField fx:id="txtLibPassword" promptText="password" />
                            <TextField fx:id="txtLibFirstName" promptText="first name" />
                            <TextField fx:id="txtLibLastName" promptText="last name" />
                            <TextField fx:id="txtLibUsername" promptText="username" />

                            <Button text="Add" onAction="#addLib"/>
                            <Button text="Edit" onAction="#updateLibrarian"/>
                            <Button text="Delete" onAction="#deleteLibrarian"/>
                        </HBox>
                    </VBox>
                </Tab>

                <Tab text="Students">
                    <VBox spacing="5">
                        <HBox spacing="10">
                            <TableView fx:id="tblStudents">
                                <columns>
                                    <TableColumn text="First Name">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="firstName" />
                                        </cellValueFactory>
                                    </TableColumn>
                                    <TableColumn text="Last Name">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="lastName" />
                                        </cellValueFactory>
                                    </TableColumn>
                                    <TableColumn text="Username">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="userName" />
                                        </cellValueFactory>
                                    </TableColumn>
                                </columns>
                            </TableView>
                            <GridPane prefHeight="305.0" prefWidth="337.0" style="-fx-border-color: #888888;">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                </rowConstraints>
                            </GridPane>
                        </HBox>

                        <HBox prefHeight="20" prefWidth="200.0" spacing="5">
                            <PasswordField fx:id="txtStudPassword" promptText="password" />
                            <TextField fx:id="txtStudFirstName" promptText="first name" />
                            <TextField fx:id="txtStudLastName" promptText="last name" />
                            <TextField fx:id="txtStudUsername" promptText="username" />

                            <Button text="Add" onAction="#addStud"/>
                            <Button text="Edit" onAction="#updateStudent"/>
                            <Button text="Delete" onAction="#deleteStudent"/>
                        </HBox>
                    </VBox>
                </Tab>
                <Tab text="Books">
                    <VBox spacing="5">
                        <HBox spacing="10">
                            <TableView fx:id="tblBooks" prefHeight="306.0" prefWidth="480.0">
                                <columns>
                                    <TableColumn text="Title">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="title" />
                                        </cellValueFactory>
                                    </TableColumn>
                                    <TableColumn text="Author">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="author" />
                                        </cellValueFactory>
                                    </TableColumn>
                                    <TableColumn text="ISBN">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="isbn" />
                                        </cellValueFactory>
                                    </TableColumn>
                                    <TableColumn text="Publish Date">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="publishDate" />
                                        </cellValueFactory>
                                    </TableColumn>
                                    <!--                                    <TableColumn prefWidth="75.0" text="Taken By">-->
                                    <!--                                        <cellValueFactory>-->
                                    <!--                                            <PropertyValueFactory property="takenBy" />-->
                                    <!--                                        </cellValueFactory>-->
                                    <!--                                    </TableColumn>-->
                                </columns>
                            </TableView>
                            <GridPane prefHeight="305.0" prefWidth="376.0" style="-fx-border-color: #888888;">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                </rowConstraints>
                            </GridPane>
                        </HBox>
                        <HBox prefHeight="20" prefWidth="200.0" spacing="5">
                            <TextField fx:id="txtTitle" prefHeight="25.0" prefWidth="100.0" promptText="title">
                                <padding>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                </padding>
                            </TextField>
                            <TextField fx:id="txtISBN" prefHeight="25.0" prefWidth="100.0" promptText="isbn">
                                <padding>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                </padding>
                            </TextField>
                            <TextField fx:id="txtAuthor" prefHeight="25.0" prefWidth="100.0" promptText="author">
                                <padding>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                </padding>
                            </TextField>
                            <TextField fx:id="txtPublishDate" prefHeight="25.0" prefWidth="100.0" promptText="publish date">
                                <padding>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                </padding>
                            </TextField>
                            <!--                     <TextField fx:id="txtTakenBy" prefWidth="100.0" promptText="taken by">-->
                            <!--                        <padding>-->
                            <!--                           <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />-->
                            <!--                        </padding>-->
                            <!--                     </TextField>-->

                            <Button onAction="#addBook" prefHeight="25.0" prefWidth="50.0" text="Add" />
                            <Button onAction="#updateBook" prefHeight="25.0" prefWidth="50.0" text="Edit" />
                            <Button onAction="#deleteBook" prefHeight="25.0" prefWidth="60.0" text="Delete" />
                        </HBox>
                    </VBox>
                </Tab>
            </tabs>
        </TabPane>
    </center>

    <bottom>
        <HBox alignment="BOTTOM_RIGHT">
            <Button onAction="#handleLogOut" style="-fx-background-color: #00ffff;" text="Log out" />
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>
