<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="Student.mainWindowController">
    <center>
        <TabPane prefHeight="360.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <tabs>
                <Tab text="Students">
                    <VBox>
                    <TableView>
                        <columns>
                            <TableColumn text="First Name">
                                <cellValueFactory>
                                    <PropertyValueFactory property="firstName"/>
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="Last Name">
                                <cellValueFactory>
                                    <PropertyValueFactory property="lastName"/>
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="Username">
                                <cellValueFactory>
                                    <PropertyValueFactory property="userName"/>
                                </cellValueFactory>
                            </TableColumn>
                        </columns>
                    </TableView>
                    <HBox prefHeight="20" prefWidth="200.0">
                        <Button text="Add"/>
                        <Button text="Edit"/>
                        <Button text="Delete"/>
                    </HBox>
                    </VBox>
                </Tab>
                <Tab text="Books">
                    <VBox>
                        <HBox spacing="10">
                            <TableView>
                                <columns>
                                    <TableColumn text="Title">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="" />
                                        </cellValueFactory>
                                    </TableColumn>
                                    <TableColumn text="Author">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="" />
                                        </cellValueFactory>
                                    </TableColumn>
                                    <TableColumn text="ISBN">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="bookISBN" />
                                        </cellValueFactory>
                                    </TableColumn>
                                    <TableColumn text="Taken by">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="bookInStudent" />
                                        </cellValueFactory>
                                    </TableColumn>
                                </columns>
                            </TableView>
                            <GridPane prefWidth="272.0">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                </rowConstraints>
                            </GridPane>
                        </HBox>
                        <HBox prefHeight="20" prefWidth="200.0" spacing="5">
                            <TextField fx:id="txtTitle" promptText="title" />
                            <TextField fx:id="txtAuthor" promptText="author" />
                            <TextField fx:id="txtISBN" promptText="isbn" />

                            <Button text="Add" />
                            <Button text="Edit" />
                            <Button text="Delete" />
                        </HBox>
                    </VBox>
                </Tab>

                <Tab text="My books">
                    <VBox>
                        <HBox spacing="10">
                            <TableView>
                                <columns>
                                    <TableColumn text="Title">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="" />
                                        </cellValueFactory>
                                    </TableColumn>
                                    <TableColumn text="Author">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="" />
                                        </cellValueFactory>
                                    </TableColumn>
                                    <TableColumn text="ISBN">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="bookISBN" />
                                        </cellValueFactory>
                                    </TableColumn>
                                </columns>
                            </TableView>
                            <GridPane prefWidth="272.0">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                </rowConstraints>
                            </GridPane>
                        </HBox>
                        <HBox prefHeight="20" prefWidth="200.0" spacing="5">
                            <Button text="Add" />
                            <Button text="Edit" />
                            <Button text="Delete" />
                        </HBox>
                    </VBox>
                </Tab>
            </tabs>
        </TabPane>
    </center>

</BorderPane>
