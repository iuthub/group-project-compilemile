<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Student.Controller">
    <center>
        <TabPane prefHeight="360.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <tabs>
                <Tab text="Books">
                    <VBox spacing="5">
                        <HBox spacing="10">
                            <TableView>
                                <columns>
                                    <TableColumn text="Title">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="" />
                                        </cellValueFactory>
                                    </TableColumn>
                                    <TableColumn text="Author">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="" />
                                        </cellValueFactory>
                                    </TableColumn>
                                    <TableColumn text="ISBN">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="" />
                                        </cellValueFactory>
                                    </TableColumn>
                                    <TableColumn text="Taken by">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="" />
                                        </cellValueFactory>
                                    </TableColumn>
                                </columns>
                            </TableView>
                            <GridPane prefHeight="335.0" prefWidth="264.0" style="-fx-border-color: #888888;">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                </rowConstraints>
                            </GridPane>
                        </HBox>
                    </VBox>
                </Tab>

                <Tab text="My books">
                    <VBox spacing="5">
                        <HBox spacing="10">
                            <TableView>
                                <columns>
                                    <TableColumn text="Title">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="" />
                                        </cellValueFactory>
                                    </TableColumn>
                                    <TableColumn text="Author">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="" />
                                        </cellValueFactory>
                                    </TableColumn>
                                    <TableColumn text="ISBN">
                                        <cellValueFactory>
                                            <PropertyValueFactory property="" />
                                        </cellValueFactory>
                                    </TableColumn>
                                </columns>
                            </TableView>
                            <GridPane prefHeight="305.0" prefWidth="336.0" style="-fx-border-color: #888888;">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                </rowConstraints>
                            </GridPane>
                        </HBox>
                        <HBox prefHeight="20" prefWidth="200.0" spacing="5">
                            <Button text="Return chosen book" />
                        </HBox>
                    </VBox>
                </Tab>
            </tabs>
        </TabPane>
    </center>

    <bottom>
        <HBox alignment="BOTTOM_RIGHT">
            <Button onAction="#handleLogOut" style="-fx-background-color: #00ffff;" text="Log out" />
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>
